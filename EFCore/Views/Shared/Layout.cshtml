    <![endif]-->
    <!-- Google Font -->

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <style>

    
        table {
            direction: rtl;
        }

        .modal-body, .modal-header {
            direction: rtl;
            text-align: right;
        }

            .modal-header .close {
                float: left;
                font-size: 27px;
                opacity: 0.7;
            }

        th {
            text-align: right;
        }

        /*strong {
